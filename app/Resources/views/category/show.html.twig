{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h1>{{ category.name }}</h1>
                <div>
                    <table>
                        {% for category in categories %}
                            <tr>
                                <td><a class="btn btn-default"
                                       href="{{ path('shop_category_show', { 'name': category.name }) }}">{{ category.name }}</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
            <div class="col-md-6">
                <h1>Products</h1>
                <div>
                    <table class="table">
                        {% for product in products %}
                            <tr>
                                <td class="info">{{ product.name }}</td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
